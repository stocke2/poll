
<span style="font-size: xx-large"><%=h @poll.title%></span><br /><br />
<div id="answers">
<% for answer in @poll.answers%>
<span style="font-size: x-large">
<%= link_to_remote answer.title, :url => {:action => "update_votes", :id => answer.id, :poll_id=> @poll.id},
                                 :update => "answers" %></span> votes: <%= answer.votes %><br />
<%end%>
</div>
<%= link_to 'index', polls_url%>
<span class="admin">
<%= link_to 'edit', edit_poll_path(@poll)%>
</span>