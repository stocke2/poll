<% poll = Poll.find(params[:poll_id])%>
<% report = Poll.find(params[:poll_id]).vote_report%>
<p style="color: green">Thank you for voting</p>
<% for answer in poll.answers%>
<span class="answer">
<%=h answer.title %></span><span class="utility"> votes: <%= answer.votes %></span><br />
<%end%>
<%= image_tag Gchart.pie_3d(:size => '800x200', :data => report[:data], :labels => report[:labels],:bar_colors=>['FF4500',"008000","0000CD","800080"])%><br />


